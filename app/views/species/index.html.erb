<%= render partial: 'partials/flash_messages' %>

<main class="wavy-image">
  <div class="index-container">

    <div class="index-header">
      <h1>Our Species</h1>
    </div>

    <% if is_admin %>
      <div class="index-link-container-top">
        <%= link_to  "New Species", new_species_path(@species), class: "button login" %>
      </div>
    <% end %>

    <ul>
      <% @species_all.each do |species| %>
        <li class="index-li"><%= link_to  species.name, species_path(species) %></li>
      <% end %>
    </ul>
  </div>
</main>

