<main class="paper-image">
    
  <%= render partial: "partials/error_messages", locals: { model: animal } %>
    
  <div class="form-container">
    <%= form_for animal do |f| %>

      <div class="form-header">
        <h1><%= action %> Animal</h1>
      </div>

      <div class="form-input-container">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-input"%>
      </div>
      
      <div class="form-input-container">
        <%= f.label :age %>
        <%= f.number_field :age, class: "form-input" %>
      </div>

      <div class="form-input-container">
        <%= f.label :weight %>
        <%= f.number_field :weight, class: "form-input" %>
      </div>

      <div class="form-input-container">
        <%= f.label :image_url %>
        <%= f.text_field :image_url, class: "form-input" %>
      </div>

      <div class="form-input-container">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-input" %>
      </div>

      <%= render partial: 'exhibit_input', locals: {f: f, exhibits: exhibits, exhibit: exhibit} %>

      <div class="form-input-container">
        <%= f.label :species_id, "Species" %>
        <%= f.select :species_id, options_from_collection_for_select(species, :id, :name), {}, {class: "form-input form-select"} %>
      </div>

      <%= f.submit %>
    <% end %>
  </div>
</main>