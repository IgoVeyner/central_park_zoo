<h2><%= action %> Animal</h2>

<%= form_for animal do |f| %>

  <%= render partial: "partials/error_messages", locals: { model: animal } %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>

  <div>
    <%= f.label :weight %>
    <%= f.number_field :weight %>
  </div>

  <div>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <% if params[:exhibit_id] %>
      <%= f.hidden_field :exhibit_id, value: params[:exhibit_id] %>
  <% else %>
    <div>
      <%= f.label :exhibit_id, "Exhibit" %>
      <%= f.select :exhibit_id, options_from_collection_for_select(exhibits, :id, :name) %>
    </div>
  <% end %>

  <div>
    <%= f.label :species_id, "Species" %>
    <%= f.select :species_id, options_from_collection_for_select(species, :id, :name) %>
  </div>

  <%= f.submit %>
<% end %>