<%= render partial: 'partials/flash_messages' %>

<main class="wavy-image">
  <div class="index-container">

    <div class="index-header">
      <h1>Our Animals</h1>
    </div>

    <% if is_admin %>
      <div class="index-link-container-top">
        <%= link_to  "New Animal", set_url, class: "button login" %>
      </div>
    <% end %>

    <ul>
      <% @animals.each do |animal| %>
        <li class="index-li">
          <%= render partial: 'list_info', locals: { animal: animal, exhibit: @exhibit} %>
        </li>
      <% end %>
    </ul>
  </div>
</main>