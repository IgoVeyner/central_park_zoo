<main class="wavy-image animal-bg-size">
  <div class="show-container">

    <div class="show-header">
      <h1><%= @animal.name %></h1>
    </div>

    <img src="<%= @animal.image_url %>" alt="">

    <div class="show-sub-container">
      <h2><%= @animal.age %> years old</h2>
    </div>
    
    <div class="show-sub-container">
      <h2><%= @animal.weight %> lbs.</h2>
    </div>

    <div class="show-sub-container">
      <h2>Species: <%= link_to @animal.species.name, species_path(@animal.species) %></h2>
    </div>

    <%= render partial: 'common_name', locals: { animal: @animal } %>

    <div class="show-sub-container">
      <h2>Exhibit: <%= link_to @animal.exhibit.name, exhibit_path(@animal.exhibit) %></h2>
    </div>

    <div class="show-sub-container">
      <h3><%= @animal.description %></h3>
    </div>

    <% if is_admin %>
      <div class="show-link-container">
        <%= link_to  "Edit Animal", edit_animal_path(@animal), class: "button edit", id: "animal-edit" %>
        <%= link_to  "Delete Animal", animal_path(@animal), method: :delete, class: "button delete" %>
      </div>
    <% end %>
  </div>
</main>