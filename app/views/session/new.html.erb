<main class="paper-image">
  <%= render partial: 'partials/flash_messages' %>

  <div class="form-container">
    <div class="form-header">
      <h1>Login with an existing account</h1>
    </div>

    <%= form_tag('/login', method: :post) do %>

      <div class="form-input-container">
        <%= label_tag :name, "Username" %>
        <%= select_tag 'user_name', options_from_collection_for_select(@users, :id, :username) %>
      </div>

      <div class="form-input-container">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <div class="form-input-container">
        <%= submit_tag("Login") %>
      </div>

    <% end %> 
  </div>

  <%= render  partial: 'partials/omniauth', locals: {phrase: "Login"} %>
</main>