<div class="show-header">
  <h1>Username: <%= user.username %></h1>
</div>

<div class="show-sub-container">
  <h2>Name: <%= user.name %></h2>
</div>

<% if has_access %>  
  <div class="show-sub-container">
    <h2>Birthdate: <%= user.birthdate ? user.birthdate_to_string : "No Birthdate Set" %></h2>
  </div>

  <div class="show-sub-container">
    <h2>$<%= user.funds %></h2>
  </div>
<% end %>