<main class="paper-image">
  <%= render partial: "partials/error_messages", locals: { model: @donation } %>
  
  <div class="form-container">
    <%= form_for @donation, url: species_donations_path do |f| %>

      <%= render partial: 'partials/flash_messages' %>
      
      <div>
        <%= f.label :amount %>
        <%= f.number_field :amount %>
      </div>

      <div>
        <%= f.label :comment %>
        <%= f.text_field :comment %>
      </div>

      <%= f.hidden_field :species_id, value: params[:species_id] %>

      <%= f.submit %>
    <% end %>
  </div>
</main>
