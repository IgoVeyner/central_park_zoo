<% if flash[:message] %>
  <div>
    <p><%= flash[:message] %></p>
  </div>
<% end %>

<% if @donation.errors.any? %>
    <div id="error_message">
      <h2>
        <%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being created:
      </h2>

      <ul>
      <% @donation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @donation, url: donations_path, method: :post do |f| %>

  <div>
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>

  <div>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>

  <%= f.hidden_field :species_id, value: params[:id] %>

  <%= f.submit %>
<% end %>