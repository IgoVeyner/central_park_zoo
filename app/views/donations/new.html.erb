<% if flash[:message] %>
  <div>
    <p><%= flash[:message] %></p>
  </div>
<% end %>

<%= form_for @donation, url: donations_path, method: :post do |f| %>

  <div>
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>

  <div>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>

  <%= f.hidden_field :species_id, value: params[:id] %>

  <%= f.submit %>
<% end %>